<?xml version="1.0" encoding="UTF-8"?>

 <!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
	<constant name="struts.objectFactory" value="spring" />
	<constant name="struts.multipart.maxSize" value="1048576000"/>
	<constant name="struts.action.excludePattern" value="/swagger/*"/>
	<constant name="struts.action.excludePattern" value="/websocket"></constant>
	<!-- <constant name="struts.enable.DynamicMethodInvocation" value="true" 
		></constant> -->
	<package name="updateAction" namespace="/admin"
		extends="struts-default">
		<action name="mc_*" class="com.hc.action.UpdateAction"
			method="{1}">
		</action>
	</package>
	
	<package name="searchAction" namespace="/usr" extends="struts-default">
		<action name="ac_*" class="com.hc.action.SearchAction" method="{1}" ></action>
	</package>
	
</struts>